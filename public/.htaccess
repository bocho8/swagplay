<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Set public directory as document root
    RewriteBase /
    
    # Redirect everything to public/index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ public/index.php [QSA,L]
</IfModule>